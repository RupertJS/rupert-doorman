doctype html5
html(lang='en', ng-app='rupert.doorman')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width,initial-scale=1')

    title Rupert Doorman Demo

    link(rel='stylesheet', href='vendors.css')

    link(rel='stylesheet', href='/all.css')
    link(rel='stylesheet', href='/screen.css', media="screen")
    link(rel='stylesheet', href='/print.css', media="print")

    //- script(src="http://code.jquery.com/jquery-2.1.1.min.js")
    script(src="vendors.js")
    script(src="socket.io/socket.io.js")

  body
    nav.navbar.navbar-default(role="navigation")
        .container-fluid
            .navbar-header
                a.navbar-brand(ui-sref="login") Rupert Doorman Demo
            ul.nav.navbar-nav.navbar-right(
                ng-controller="OAuthLoginController as login"
            )
                li
                    a(href="#", ng-click="login.loginWith('google')") Google
    .container(ng-controller="RupertProfileController as profile")
        h1 Hello
        h2 {{ profile.name }}
        button.btn.btn-primary(ng-click="profile.checkAgain()") Check Again

    script(src="templates.js")
    script(src="application.js")
